{
    "$id": "https://node-and-friends/with-express-mongoose-authen/Users.json",
    "definitions": {
        "createUser": {
            "type": "object",
            "properties": {
                "username": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 20
                },
                "displayName": {
                    "type": "string",
                    "minLength": 4,
                    "maxLength": 50
                },
                "disabled": {
                    "type": "boolean"
                },
